<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- title -->
    <RelativeLayout
        android:id="@+id/set_local_title_layout"
        android:layout_width="fill_parent"
        android:background="#5c8aea"
        android:layout_height="56dp">
        <TextView android:text="나의 목적지"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/init_add"
            android:background="#fafafa"
            android:orientation="vertical"
            >
            <Button
                android:layout_marginTop="150dp"
                android:id="@+id/picture_receiver_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/init_add"
                />
            <TextView
                android:id="@+id/picture_receiver_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가하기 버튼을 눌러"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/picture_receiver_button"
                />
            <TextView
                android:id="@+id/picture_receiver_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호자 연락처를 입력해 주세요"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/picture_receiver_tv1"
                />
            <TextView
                android:id="@+id/add_text_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가하기"
                android:textColor="#727272"
                android:textSize="20dp"
                android:background="#fafafa"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/picture_receiver_tv1"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/go_add"
                android:layout_alignBottom="@+id/add_text_button"
                android:layout_alignEnd="@+id/picture_receiver_tv1" />

        </RelativeLayout>

    <LinearLayout
        android:id="@+id/desti"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- DESTINATION -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#fafafa"
            >
            <TextView
                android:id="@+id/destination_tv"
                android:text="목적지"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            >
            <View

                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#bdbdbd" /> </LinearLayout>
        <ListView
            android:background="#ffffff"
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

        android:dividerHeight="1.5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            >
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#bdbdbd" /> </LinearLayout>

        <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
            <!-- HOME IMAGE -->
            <ImageView
                android:id="@+id/home_ic"
                android:src="@drawable/addd2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#ffffff"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="24dp"
                />
            <!-- SETTING STRING / WARD OFFICE / SUBWAY STATION -->

                <!-- SETING STRING -->
                <Button
                    android:id="@+id/add"
                    android:text="추가하기                  "
                    android:textStyle="bold"

                    android:textColor="#b6b6b6"
                    android:background="@drawable/transparent_button"
                    android:layout_width="fill_parent"
                    android:textSize="20dp"
                    android:paddingStart="0dp"
                    android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/home_ic"

                    />
                <!-- WARD OFFICE -->

        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>


