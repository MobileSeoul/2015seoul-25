<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/set_call_title_layout"
        android:layout_width="fill_parent"
        android:background="#5c8aea"
        android:layout_height="56dp">
        <TextView android:text="보호자 연락처"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:id="@+id/delete_receiver_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            >
            <Button
                android:id="@+id/delete_receiver"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/garbage_box"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receiver_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_call_title_layout"
        >
        <ListView
            android:id="@+id/receiver_list_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_below="@+id/receiver_list_lv"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
            <!-- HOME IMAGE -->
            <ImageView
                android:id="@+id/home_ic"
                android:src="@drawable/addd2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#ffffff"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="24dp"
                />
            <!-- SETTING STRING / WARD OFFICE / SUBWAY STATION -->

            <!-- SETING STRING -->
            <Button
                android:id="@+id/not_init_add_button"
                android:text="추가하기                  "
                android:textStyle="bold"
                android:textColor="#b6b6b6"
                android:background="@drawable/transparent_button"
                android:layout_width="fill_parent"
                android:textSize="20dp"
                android:paddingStart="0dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/home_ic"

                />
    </RelativeLayout>
    </RelativeLayout>
    <!-- content -->
       <ImageView android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/init_add"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/picture_receiver_button"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/init_add"
            />
        <TextView
            android:id="@+id/picture_receiver_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가하기 버튼을 눌러"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/picture_receiver_button"
            />
        <TextView
            android:id="@+id/picture_receiver_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보호자 연락처를 입력해 주세요"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/picture_receiver_tv1"
            />
        <Button
            android:id="@+id/add_text_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="추가하기 >"
            android:textStyle="bold"
            android:background="@drawable/transparent_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/picture_receiver_tv1"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>
</RelativeLayout>
