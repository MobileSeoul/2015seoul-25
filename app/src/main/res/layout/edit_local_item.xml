
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="#ffffff"
    >
    <!-- HOME IMAGE -->
    <ImageView
        android:id="@+id/home_ic"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="24dp"
        />
    <!-- SETTING STRING / WARD OFFICE / SUBWAY STATION -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"

        android:layout_toRightOf="@+id/home_ic"
        >
        <!-- SETING STRING -->
        <TextView
            android:id="@+id/home_tv"
            android:text=""
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            />
        <!-- WARD OFFICE -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/home_ward"

                android:layout_width="13dp"
                android:layout_height="13dp"

                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/home_ward_tv"
                android:text=""
                android:layout_width="40dp"
                android:textSize="13dp"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                />

            <ImageView
                android:id="@+id/home_sub_img"


                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/home_sub_tv"
                android:text=""
                android:layout_width="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/call_home"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>