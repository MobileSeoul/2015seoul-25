<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
android:background="#fafafa"

        android:orientation="horizontal"
        >
        <!-- HOME IMAGE -->
        <ImageView
            android:id="@+id/home_ic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            />
        <!-- SETTING STRING / WARD OFFICE / SUBWAY STATION -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/home_ic"
            >
            <!-- SETING STRING -->
            <TextView
                android:id="@+id/home_tv"
                android:text="우리 집"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="176dp"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                />
            <!-- WARD OFFICE -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/home_ward"
                    android:src="@drawable/add"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/home_ward_tv"
                    android:text="서울특별시 강남구청"
                    android:layout_width="176dp"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    />
            </LinearLayout>
            <!-- SUBWAY STATION -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/home_sub_img"
                    android:src="@drawable/subway"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/home_sub_tv"
                    android:text="강남역"
                    android:layout_width="176dp"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- CALL BUTTON -->
        <Button
            android:id="@+id/call_home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/action_request"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
