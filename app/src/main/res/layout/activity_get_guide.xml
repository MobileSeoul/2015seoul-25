<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.safebackhome.j6.safeguardbackhome.GetGuide">
    <!-- title -->
    <RelativeLayout
        android:id="@+id/get_guide_title_layout"
        android:layout_width="fill_parent"
        android:background="#5c8aea"
        android:layout_height="56dp">
        <TextView android:text="안심 귀가 서비스란?"
            android:textSize="20dp"
            android:id="@+id/guide_tv"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:layout_below="@+id/get_guide_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/jikime"/>
    <!-- content -->
</RelativeLayout>
