<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ededed"
        />
    <!-- find field -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#ededed"
            android:orientation="horizontal"
            android:id="@+id/relativeLayout"
            android:layout_margin="5dp"
        >
            <RelativeLayout

                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:background="#ffffff"
                android:layout_height="wrap_content">

            <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/find_gu_ed"
                android:layout_width="260dp"
                android:layout_height="40dp"


                android:ellipsize="end"
                android:hint="역이름으로 검색"
                android:singleLine="true"
                android:textColorHint="#bdbdbd"
                android:textColor="#000000"
                android:background="#ffffff"
                android:completionThreshold="1"
                android:layout_marginLeft="4dp"
                android:padding="5dp"


                />

            <Button
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:id="@+id/find_gu_btn_by_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/find_gu_by_name"

                android:layout_toRightOf="@+id/find_gu_ed"
                />
            </RelativeLayout>

            <Button
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/change"
                android:layout_width="22dp"
                android:layout_height="12dp"
                android:layout_marginTop="13dp"

                android:background="@drawable/change"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"

                />
        </LinearLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_below="@+id/relativeLayout">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:id="@+id/set_gu"
        android:text=""
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"

        android:layout_width="wrap_content"

        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_height="wrap_content"

        />
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/subway"

                android:layout_width="17dp"

                android:layout_marginTop="6dp"

                android:layout_height="17dp"/>
            <TextView
                android:id="@+id/set_gu_text"
                android:text=""
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                />

        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/call"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            />

    </RelativeLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/linear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <!-- content -->

</RelativeLayout>